	<script>
		
		
        
        var _conn = $.hubConnection("/myConn");

        var proxy = _conn.createHubProxy("ChatHub");

        _conn.start({}, function (data) {
            console.log("starting...");
            proxy.invoke("Hello")
        })

        proxy.on("hello", function (data) {
            console.log(data);
        })
        
    </script>
