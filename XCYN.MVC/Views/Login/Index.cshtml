
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />
<h2>系统登录</h2>
<form class="layui-form" action="" style="margin-top: 50px;" onsubmit="return false" >
    <div class="layui-form-item">
        <label class="layui-form-label">用户名</label>
        <div class="layui-input-block" style="margin-left: 80px;">
            <input type="text" id="username_textbox" name="username" required lay-verify="required" placeholder="请输入用户名" autocomplete="off" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">密码</label>
        <div class="layui-input-inline" style="width: 280px;">
            <input type="password"  id="password_textbox" name="password" required lay-verify="required" placeholder="请输入密码" autocomplete="off" class="layui-input">
        </div>
    </div>
    <div class="layui-form-item">
        <div class="layui-input-block">
            <button class="layui-btn" id="login_submit" lay-submit lay-filter="formDemo" style="margin-left: -30px;">提交</button>
            <button type="reset" class="layui-btn layui-btn-primary">重置</button>
        </div>
    </div>
</form>

<script src="~/Scripts/layui/layui.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    layui.use('form');
    $(function () {
        $("#login_submit").click(function () {
            var username = $("#username_textbox").val();
            var password = $("#password_textbox").val();
            $.get("ValidUser?username=" + username + "&password=" + password, function (data) {
                alert(data)
            });
        });
    });
</script>
